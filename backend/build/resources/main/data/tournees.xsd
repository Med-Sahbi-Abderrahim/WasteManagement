<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:element name="tournees">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="tournee" type="Tournee" minOccurs="0" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="Utilisateur">
        <xs:all>
            <xs:element name="id" type="xs:int"/>
            <xs:element name="nom" type="xs:string"/>
            <xs:element name="prenom" type="xs:string"/>
            <xs:element name="telephone" type="xs:string" minOccurs="0"/>
            <xs:element name="role" type="xs:string" minOccurs="0"/>
            <xs:element name="disponible" type="xs:boolean" minOccurs="0"/>
        </xs:all>
    </xs:complexType>

    <xs:complexType name="Vehicule">
        <xs:sequence>
            <xs:element name="id" type="xs:int"/>
            <xs:element name="capacite" type="xs:float" minOccurs="0"/>
            <xs:element name="disponibilite" type="xs:boolean" minOccurs="0"/>
            <xs:element name="immatriculation" type="xs:string" minOccurs="0"/>
            <xs:element name="typeVehicule" type="xs:string" minOccurs="0"/>
            <xs:element name="statut" type="xs:string" minOccurs="0"/>
            <xs:element name="etat" type="xs:string" minOccurs="0"/>
            <xs:element name="conducteur" type="Utilisateur" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="PointCollecte">
        <xs:all>
            <xs:element name="id" type="xs:int"/>
            <xs:element name="localisation" type="xs:string"/>
            <xs:element name="niveauRemplissage" type="xs:float" minOccurs="0"/>
            <xs:element name="latitude" type="xs:double" minOccurs="0"/>
            <xs:element name="longitude" type="xs:double" minOccurs="0"/>
            <xs:element name="capacite" type="xs:int" minOccurs="0"/>
            <xs:element name="etatConteneur" type="xs:string" minOccurs="0"/>
            <xs:element name="DateDerniereCollecte" type="xs:dateTime" minOccurs="0"/>
        </xs:all>
    </xs:complexType>

    <xs:complexType name="RapportTournee">
        <xs:sequence>
            <xs:element name="id" type="xs:int"/>
            <xs:element name="dateGeneration" type="xs:date"/>
            <xs:element name="quantiteCollectee" type="xs:float"/>
            <xs:element name="emissionsCO2" type="xs:float"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="Tournee">
        <xs:sequence>
            <xs:element name="id" type="xs:int"/>
            <xs:element name="datePlanifiee" type="xs:dateTime" minOccurs="0"/>
            <xs:element name="statut" type="xs:string"/>
            <xs:element name="employe" type="Utilisateur" minOccurs="0"/>
            <xs:element name="vehicle" type="Vehicule" minOccurs="0"/>
            <xs:element name="pointsCollecte" type="PointCollecte" minOccurs="0" maxOccurs="unbounded"/>
            <xs:element name="rapport" type="RapportTournee" minOccurs="0"/>
            <xs:element name="heureDebut" type="xs:string" minOccurs="0"/>
            <xs:element name="heureFin" type="xs:string" minOccurs="0"/>
            <xs:element name="distanceKm" type="xs:float" minOccurs="0"/>
        </xs:sequence>
    </xs:complexType>

</xs:schema>