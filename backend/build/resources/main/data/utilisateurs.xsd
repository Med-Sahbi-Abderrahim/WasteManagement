<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <xs:element name="Utilisateurs">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Utilisateur" type="Utilisateur" minOccurs="0" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:complexType name="Utilisateur">
        <xs:sequence>
            <xs:element name="id" type="xs:int"/>
            <xs:element name="mail" type="xs:string"/>
            <xs:element name="password" type="xs:string"/>
            <xs:element name="nom" type="xs:string"/>
            <xs:element name="prenom" type="xs:string"/>
            <xs:element name="telephone" type="xs:string"/> 
            <xs:element name="role">
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:enumeration value="ADMIN"/>
                        <xs:enumeration value="EMPLOYE"/>
                        <xs:enumeration value="TECHNICIEN"/>
                        <xs:enumeration value="SUPERVISEUR_ZONE"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
        </xs:sequence>
    </xs:complexType>

</xs:schema>